API_TMDB_API_KEY=api_key
API_TMDB_BASE_URL=https://api.themoviedb.org/3
API_REQUEST_TIMEOUT=10
API_RATE_LIMIT_DELAY=0.25
API_MAX_RETRIES=3

DB_DATABASE_URL=sqlite:///./recommendations.db
DB_REDIS_URL=redis://localhost:6379
DB_CACHE_TTL=3600

MODEL_EMBEDDING_MODEL=all-MiniLM-L6-v2
MODEL_KNN_NEIGHBORS=20
MODEL_NEURAL_NET_HIDDEN_SIZE=128
MODEL_NEURAL_NET_DROPOUT=0.3
MODEL_LEARNING_RATE=0.001
MODEL_BATCH_SIZE=32
MODEL_EPOCHS=100
MODEL_EARLY_STOPPING_PATIENCE=10

REC_MAX_CATALOG_SIZE=1000
REC_SIMILARITY_THRESHOLD=0.7
REC_DIVERSITY_FACTOR=0.3
REC_POPULARITY_WEIGHT=0.1
REC_GENRE_WEIGHT=0.3
REC_EMBEDDING_WEIGHT=0.5
REC_LENGTH_WEIGHT=0.1

LOG_LEVEL=INFO
LOG_FILE=recommendations.log
LOG_ENABLE_METRICS=true